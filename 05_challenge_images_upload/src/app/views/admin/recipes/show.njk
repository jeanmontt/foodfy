{% extends "admin/layout.njk" %}

{% block head %}
  <link rel="stylesheet" href="/styles/admin/recipes/show.css">

  <title>Foodfy - Detalhes receita
    {{ recipe.title }}</title>
{% endblock head %}

{% block content %}
  <section class="container">
    <div class="header">
      <h1>Receita:
        {{ recipe.title }}</h1>

      <a href="/admin/receitas/{{ recipe.id }}/editar">Editar receita</a>
    </div>

    <div class="content">
      <div class="image">
        <img src="{{ recipe.image }}" alt="{{ recipe.title }}">
      </div>

      <div class="title">
        <h1>{{ recipe.title }}</h1>
        <p>por
          {{ recipe.chef_name }}</p>
      </div>

      <div class="ingredients">
        <h2>Ingredientes</h2>

        <ul>
          {% for ingredient in recipe.ingredients %}
            <li>{{ ingredient }}</li>
          {% endfor %}
        </ul>
      </div>

      <div class="preparation">
        <h2>Modo de Preparo</h2>

        <ul>
          {% for preparation in recipe.preparation %}
            <li>{{ preparation }}</li>
          {% endfor %}
        </ul>
      </div>

      <div class="extra_info">
        <h2>Informações adicionais</h2>

        <p>{{ recipe.information }}</p>
      </div>
    </div>
  </section>

{% endblock content %}