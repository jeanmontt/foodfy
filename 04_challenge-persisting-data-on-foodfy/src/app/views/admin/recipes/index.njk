{% extends "admin/layout.njk" %}

{% block head %}
  <link rel="stylesheet" href="/styles/admin/recipes/index.css">

  <title>Foodfy - Administração</title>
{% endblock head %}

{% block content %}
  <section class="content">
    <h1>Gerenciar receitas</h1>

    <div class="cards">
      {% for recipe in recipes %}
        <div class="card">
            <div class="image">
            <img src="{{ recipe.image }}" alt="{{ recipe.title }}">          
          </div>

          <div class="info">
            <h2>{{ recipe.title }}</h2>
            <p>{{ recipe.author }}</p>
            <a href="/admin/receitas/{{ recipe.id }}">Visualizar</a>
          </div>
        </div>    
      {% endfor %}
    </div>
  </section>
{% endblock content %}