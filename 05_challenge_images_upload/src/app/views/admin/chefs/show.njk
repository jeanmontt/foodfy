{% extends "admin/layout.njk" %}

{% block head %}
  <link rel="stylesheet" href="/styles/admin/chefs/show.css">

  <title>Foodfy - Detalhes Chef
    {{chef.name}}</title>
{% endblock head %}

{% block content %}
  <section class="container">
    <div class="header">
      <h1>Chef:
        {{chef.name}}</h1>

      <a href="/admin/chefs/{{chef.id}}/editar">Editar Chef</a>
    </div>

    <div class="content">
      <div class="title">
        <img src="{{chef.avatar_url}}" alt="Avatar {{chef.name}}">

        <h1>{{chef.name}}</h1>

        {% if chef.total_recipes == 0 %}
          <p>Sem receita</p>
        {% elif chef.total_recipes == 1 %}
          <p>{{chef.total_recipes}}
            receita</p>
          {%else%}
          <p>{{chef.total_recipes}}
            receitas</p>
        {% endif %}
      </div>

      <div class="recipes">
        <h2>Receitas</h2>

        <div class="cards">
          {% for recipe in recipes_chef %}
            <div class="card">
              <div class="image">
                <img src="{{recipe.image}}" alt="{{recipe.title}}">
              </div>

              <div class="info">
                <h2>{{recipe.title}}</h2>
                <p>por
                  {{chef.name}}</p>
                <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
              </div>
            </div>
          {% endfor %}
        </div>

      </div>
    </div>
  </section>

{% endblock content %}