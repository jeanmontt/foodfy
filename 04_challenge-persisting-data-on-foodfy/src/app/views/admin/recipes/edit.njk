{% extends "admin/layout.njk" %}

{% block head %}
  <link rel="stylesheet" href="/styles/admin/recipes/create-edit.css">

  <title>Foodfy - Editando receita:
    {{ recipe.title }}</title>
{% endblock head %}

{% block content %}
  <section class="container">
    <form class="form-delete" action="/admin/receitas?_method=DELETE" method="POST">
      <button class="delete" type="submit">Deletar</button>

      <input type="hidden" name="id" value="{{ recipe.id }}">
    </form>

    <form action="/admin/receitas?_method=PUT" method="POST">
      <div class="header">
        <h1>Editando receita:
          {{ recipe.title }}</h1>

        <button class="save" type="submit">Salvar receita</button>

        <input type="hidden" name="id" value="{{ recipe.id }}">
      </div>

      {% include "admin/recipes/fields.njk" %}
    </form>
  </section>
{% endblock content %}

{% block scripts %}
  <script src="/scripts/addInput.js"></script>
  <script src="/scripts/recipeDelete.js"></script>
{% endblock scripts %}