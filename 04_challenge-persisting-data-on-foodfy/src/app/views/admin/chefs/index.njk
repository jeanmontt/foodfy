{% extends "admin/layout.njk" %}

{% block head %}
  <link rel="stylesheet" href="/styles/admin/chefs/index.css">
  <title>Foodfy - Gerenciar chefs</title>
{% endblock head %}

{% block content %}
  <section class="content">
    <h1>Gerenciar chefs</h1>

    <div class="cards">

      {% for chef in chefs %}
        <div class="card">
          <div class="image">
            <img src="{{chef.avatar_url}}" alt="Avatar {{chef.name}}">
          </div>

          <div class="info">
            <h2>{{chef.name}}</h2>
            <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </section>
{% endblock content %}