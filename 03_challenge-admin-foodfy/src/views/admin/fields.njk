<div class="content">
  <div class="image">
    <h2>Imagem da receita</h2>

    <input type="url" name="image" placeholder="http://" value="{{ data.image }}">
  </div>

  <div class="ingredients">
    <h2>Ingredientes</h2>

    {% for ingredient in data.ingredients %}
      <input type="text" name="ingredients" placeholder="Digite um igrediente por campo" value="{{ ingredient }}">
    {% else %}
      <input type="text" name="ingredients" placeholder="Digite um igrediente por campo" value="">
    {% endfor %}

    <button type="button" class="new-ingredient">Adicionar novo ingrediente</button>
  </div>

  <div class="preparation">
    <h2>Modo de preparo</h2>

    {% for preparation in data.preparation %}
      <input type="text" name="preparation" placeholder="Digite um passo por campo" value="{{ preparation }}">
    {% else %}
      <input type="text" name="preparation" placeholder="Digite um passo por campo" value="">
    {% endfor %}

    <button type="button" class="new-preparation">Adicionar novo passo</button>
  </div>

  <div class="extra_info">
    <h2>Informações adicionais</h2>

    <textarea name="information" cols="30" rows="10" value="" placeholder="Digite as informações adicionais">{{ data.information }}</textarea>
  </div>
</div>